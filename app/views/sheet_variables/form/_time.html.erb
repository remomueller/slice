<% is_grid = defined?(grid) %>

<div class="time-input">

  <%= hidden_field_tag field_name,(Time.parse(response).strftime('%H:%M:%S') rescue response),
      data: {
              object: "condition",
             },
      disabled: disabled
  %>

  <div class="<%= "input-prepend" unless variable.prepend.blank?  %> hour-box time-box">
    <% unless variable.prepend.blank? %><span class="add-on"><%= variable.prepend %></span><% end %>
    <%= text_field_tag "hour_#{field_name}", (Time.parse(response).strftime('%H') rescue response), maxlength: 2, disabled: disabled, data: { target_input: field_name } %>
  </div>

  <div class="time-divider">&#58;</div>
  <div class="min-box time-box"><%= text_field_tag "min_#{field_name}", (Time.parse(response).strftime('%M') rescue response), maxlength: 2, disabled: disabled, data: { target_input: field_name } %></div>
  <div class="time-divider">&#58;</div>

  <div class="sec-box time-box <%= "input-append" unless variable.append.blank? %>">
    <%= text_field_tag "sec_#{field_name}", (Time.parse(response).strftime('%S') rescue response), maxlength: 2, disabled: disabled, data: { target_input: field_name } %>
    <% unless variable.append.blank? %><span class="add-on"><%= variable.append %></span><% end %>
  </div>

  <%=
      link_to 'Current Time', '#', data: { object: 'set-time-input-to-current-time', target_input: field_name }, class: 'btn', tabindex: '-1'
  %>
</div>
